<UserControl
    x:Class="BankDds.Wpf.Views.AdminView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:BankDds.Wpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter" />
        <converters:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVis" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            Style="{StaticResource PageTitleStyle}"
            Text="Quản trị Người dùng" />

        <!--  Action Buttons  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,15"
            Orientation="Horizontal">
            <Button
                x:Name="Add"
                Content="Thêm người dùng"
                Style="{StaticResource PrimaryButtonStyle}" />
            <Button
                x:Name="Edit"
                Content="Sửa"
                Style="{StaticResource WarningButtonStyle}" />
            <Button
                x:Name="Delete"
                Content="Vô hiệu hóa"
                Style="{StaticResource DangerButtonStyle}" />
            <Button
                x:Name="Restore"
                Content="Phục hồi"
                Style="{StaticResource SuccessButtonStyle}" />
        </StackPanel>

        <!--  User List  -->
        <DataGrid
            x:Name="Users"
            Grid.Row="2"
            SelectedItem="{Binding SelectedUser, Mode=TwoWay}"
            Style="{StaticResource StandardDataGridStyle}">
            <!--  Grey-italic rows for soft-deleted users  -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource {x:Type DataGridRow}}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding TrangThaiXoa}" Value="1">
                            <Setter Property="Foreground" Value="#999999" />
                            <Setter Property="FontStyle" Value="Italic" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Username}"
                    Header="Tên đăng nhập" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding UserGroup}"
                    Header="Vai trò" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding DefaultBranch}"
                    Header="Chi nhánh mặc định" />
                <DataGridTextColumn
                    Width="130"
                    Binding="{Binding EmployeeId}"
                    Header="Mã NV" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding CustomerCMND}"
                    Header="CMND KH" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding StatusText}"
                    Header="Trạng thái" />
            </DataGrid.Columns>
        </DataGrid>

        <!--  Edit Form  -->
        <Border
            Grid.Row="2"
            Style="{StaticResource DetailPanelStyle}"
            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisConverter}}">
            <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Style="{StaticResource SectionTitleStyle}" Text="Thông tin Người dùng" />

                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Tên đăng nhập:" />
                    <TextBox
                        Margin="0,0,0,12"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingUser.Username, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Mật khẩu mới:" />
                    <PasswordBox
                        x:Name="NewPasswordBox"
                        Margin="0,0,0,12"
                        PasswordChanged="OnNewPasswordChanged"
                        Style="{StaticResource StandardPasswordBoxStyle}" />

                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Xác nhận mật khẩu:" />
                    <PasswordBox
                        x:Name="ConfirmPasswordBox"
                        Margin="0,0,0,12"
                        PasswordChanged="OnConfirmPasswordChanged"
                        Style="{StaticResource StandardPasswordBoxStyle}" />

                    <TextBlock
                        Margin="0,0,0,12"
                        FontSize="12"
                        Text="{Binding PasswordValidationMessage}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="#D32F2F" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPasswordValid}" Value="True">
                                        <Setter Property="Foreground" Value="#388E3C" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Nhóm người dùng:" />
                    <ComboBox
                        Margin="0,0,0,12"
                        ItemsSource="{Binding AvailableUserGroups}"
                        SelectedItem="{Binding EditingUser.UserGroup, Mode=TwoWay}"
                        Style="{StaticResource StandardComboBoxStyle}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Mã nhân viên (NVxxxxxxxx, dành cho nhân viên ngân hàng/chi nhánh):" />
                    <TextBox
                        Margin="0,0,0,12"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingUser.EmployeeId, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Chi nhánh mặc định:" />
                    <ComboBox
                        Margin="0,0,0,12"
                        ItemsSource="{Binding AvailableBranches}"
                        SelectedItem="{Binding EditingUser.DefaultBranch, Mode=TwoWay}"
                        Style="{StaticResource StandardComboBoxStyle}" />

                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="CMND khách hàng (chỉ dành cho khách hàng):" />
                    <TextBox
                        Margin="0,0,0,20"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingUser.CustomerCMND, UpdateSourceTrigger=PropertyChanged}" />

                    <!--  Inline validation errors  -->
                    <Border
                        Style="{StaticResource ValidationErrorPanelStyle}"
                        Visibility="{Binding HasError, Converter={StaticResource BoolToVisConverter}}">
                        <StackPanel>
                            <TextBlock
                                FontWeight="SemiBold"
                                Foreground="#8B0000"
                                Text="Vui lòng sửa các lỗi sau:"
                                Margin="0,0,0,4" />
                            <TextBlock
                                Text="{Binding ErrorMessage}"
                                TextWrapping="Wrap"
                                Foreground="#8B0000" />
                        </StackPanel>
                    </Border>

                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            x:Name="Save"
                            Content="Ghi"
                            Style="{StaticResource SuccessButtonStyle}" />
                        <Button
                            x:Name="Cancel"
                            Margin="0"
                            Content="Thoát"
                            Style="{StaticResource SecondaryButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!--  Messages  -->
        <StackPanel Grid.Row="3" Margin="0,10,0,0">
            <TextBlock
                Text="{Binding SuccessMessage}"
                Foreground="#388E3C"
                FontWeight="SemiBold"
                Margin="0,0,0,5">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SuccessMessage.Length, FallbackValue=0}" Value="0">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding SuccessMessage}" Value="">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding SuccessMessage}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            <TextBlock
                x:Name="ErrorMessage"
                Style="{StaticResource ErrorMessageStyle}" />
        </StackPanel>
        
        <!-- Loading Overlay -->
        <Grid Grid.Row="0" Grid.RowSpan="4" Style="{StaticResource LoadingOverlayStyle}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar Style="{StaticResource LoadingSpinnerStyle}"/>
                <TextBlock Text="Đang tải..." Foreground="White" Margin="0,10,0,0" 
                           HorizontalAlignment="Center" FontSize="14"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
