<UserControl
    x:Class="BankDds.Wpf.Views.EmployeesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:BankDds.Wpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter" />
        <converters:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVis" />
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Style="{StaticResource PageTitleStyle}"
            Text="Employee Management" />
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,15"
            Orientation="Horizontal">
            <Button
                x:Name="Add"
                Content="Add New"
                Style="{StaticResource PrimaryButtonStyle}" />
            <Button
                x:Name="Edit"
                Content="Edit"
                Style="{StaticResource WarningButtonStyle}" />
            <Button
                x:Name="Delete"
                Content="Delete"
                Style="{StaticResource DangerButtonStyle}" />
            <Button
                x:Name="Restore"
                Content="Restore"
                Style="{StaticResource SuccessButtonStyle}" />
        </StackPanel>
        <DataGrid
            x:Name="Employees"
            Grid.Row="2"
            SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
            Style="{StaticResource StandardDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="50"
                    Binding="{Binding MANV}"
                    Header="ID" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding HO}"
                    Header="Last Name" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding TEN}"
                    Header="First Name" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DIACHI}"
                    Header="Address" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding CMND}"
                    Header="CMND" />
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding PHAI}"
                    Header="Gender" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding SDT}"
                    Header="Phone" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding MACN}"
                    Header="Branch" />
                <DataGridTextColumn
                    Width="70"
                    Binding="{Binding StatusText}"
                    Header="Status" />
            </DataGrid.Columns>
        </DataGrid>
        <Border
            Grid.Row="2"
            Style="{StaticResource DetailPanelStyle}"
            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisConverter}}">
            <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Style="{StaticResource SectionTitleStyle}" Text="Employee Details" />
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Last Name:" />
                    <TextBox
                        Margin="0,0,0,12"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingEmployee.HO, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="First Name:" />
                    <TextBox
                        Margin="0,0,0,12"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingEmployee.TEN, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Address:" />
                    <TextBox
                        Margin="0,0,0,12"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingEmployee.DIACHI, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="CMND:" />
                    <TextBox
                        Margin="0,0,0,12"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingEmployee.CMND, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Gender:" />
                    <ComboBox
                        Margin="0,0,0,12"
                        SelectedValue="{Binding EditingEmployee.PHAI, Mode=TwoWay}"
                        Style="{StaticResource StandardComboBoxStyle}">
                        <ComboBoxItem Content="Nam" />
                        <ComboBoxItem Content="Nu" />
                    </ComboBox>
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Phone:" />
                    <TextBox
                        Margin="0,0,0,12"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingEmployee.SDT, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Branch:" />
                    <ComboBox
                        Margin="0,0,0,20"
                        ItemsSource="{Binding AvailableBranches}"
                        SelectedValue="{Binding EditingEmployee.MACN, Mode=TwoWay}"
                        Style="{StaticResource StandardComboBoxStyle}" />
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Transfer to Branch:" />
                    <ComboBox
                        Margin="0,0,0,12"
                        ItemsSource="{Binding AvailableBranches}"
                        SelectedItem="{Binding TransferBranch, Mode=TwoWay}"
                        Style="{StaticResource StandardComboBoxStyle}" />
                    <Button
                        x:Name="ExecuteTransferBranch"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Stretch"
                        Content="Transfer Branch"
                        Style="{StaticResource WarningButtonStyle}" />
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            x:Name="Save"
                            Content="Save"
                            Style="{StaticResource SuccessButtonStyle}" />
                        <Button
                            x:Name="Cancel"
                            Margin="0"
                            Content="Cancel"
                            Style="{StaticResource SecondaryButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <TextBlock
            x:Name="ErrorMessage"
            Grid.Row="3"
            Style="{StaticResource ErrorMessageStyle}" />
    </Grid>
</UserControl>
