<UserControl
    x:Class="BankDds.Wpf.Views.EmployeesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:BankDds.Wpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter" />
        <converters:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVis" />
    </UserControl.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Style="{StaticResource PageTitleStyle}"
            Text="Quản lý Nhân viên" />
        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,15"
            Orientation="Horizontal">
            <Button
                x:Name="Add"
                Content="Thêm mới"
                Style="{StaticResource PrimaryButtonStyle}" />
            <Button
                x:Name="Edit"
                Content="Sửa"
                Style="{StaticResource WarningButtonStyle}" />
            <Button
                x:Name="Delete"
                Content="Xóa"
                Style="{StaticResource DangerButtonStyle}" />
            <Button
                x:Name="Restore"
                Content="Phục hồi"
                Style="{StaticResource SuccessButtonStyle}" />
        </StackPanel>
        <DataGrid
            x:Name="Employees"
            Grid.Row="2"
            SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
            Style="{StaticResource StandardDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="50"
                    Binding="{Binding MANV}"
                    Header="Mã NV" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding HO}"
                    Header="Họ" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding TEN}"
                    Header="Tên" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DIACHI}"
                    Header="Địa chỉ" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding CMND}"
                    Header="CMND" />
                <DataGridTextColumn
                    Width="60"
                    Binding="{Binding PHAI}"
                    Header="Phái" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding SDT}"
                    Header="SĐT" />
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding MACN}"
                    Header="Chi nhánh" />
                <DataGridTextColumn
                    Width="70"
                    Binding="{Binding StatusText}"
                    Header="Trạng thái" />
            </DataGrid.Columns>
        </DataGrid>
        <Border
            Grid.Row="2"
            Style="{StaticResource DetailPanelStyle}"
            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisConverter}}">
            <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Style="{StaticResource SectionTitleStyle}" Text="Thông tin Nhân viên" />
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Mã nhân viên (MANV):" />
                    <TextBox
                        Margin="0,0,0,12"
                        Background="#F0F0F0"
                        IsReadOnly="True"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingEmployee.MANV}" />
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Họ:" />
                    <TextBox
                        Margin="0,0,0,12"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingEmployee.HO, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Tên:" />
                    <TextBox
                        Margin="0,0,0,12"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingEmployee.TEN, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Địa chỉ:" />
                    <TextBox
                        Margin="0,0,0,12"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingEmployee.DIACHI, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="CMND:" />
                    <TextBox
                        Margin="0,0,0,12"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingEmployee.CMND, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Phái:" />
                    <ComboBox
                        Margin="0,0,0,12"
                        SelectedValue="{Binding EditingEmployee.PHAI, Mode=TwoWay}"
                        Style="{StaticResource StandardComboBoxStyle}">
                        <ComboBoxItem Content="Nam" />
                        <ComboBoxItem Content="Nữ" />
                    </ComboBox>
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="SĐT:" />
                    <TextBox
                        Margin="0,0,0,12"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingEmployee.SDT, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Chi nhánh:" />
                    <ComboBox
                        Margin="0,0,0,20"
                        ItemsSource="{Binding AvailableBranches}"
                        SelectedValue="{Binding EditingEmployee.MACN, Mode=TwoWay}"
                        Style="{StaticResource StandardComboBoxStyle}" />
                    <!--  Inline validation errors  -->
                    <Border Style="{StaticResource ValidationErrorPanelStyle}" Visibility="{Binding HasError, Converter={StaticResource BoolToVisConverter}}">
                        <StackPanel>
                            <TextBlock
                                Margin="0,0,0,4"
                                FontWeight="SemiBold"
                                Foreground="#8B0000"
                                Text="Vui lòng sửa các lỗi sau:" />
                            <TextBlock
                                Foreground="#8B0000"
                                Text="{Binding ErrorMessage}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Chuyển đến chi nhánh:" />
                    <ComboBox
                        Margin="0,0,0,12"
                        ItemsSource="{Binding AvailableBranches}"
                        SelectedItem="{Binding TransferBranch, Mode=TwoWay}"
                        Style="{StaticResource StandardComboBoxStyle}" />
                    <Button
                        x:Name="ExecuteTransferBranch"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Stretch"
                        Content="Thực hiện chuyển chi nhánh"
                        Style="{StaticResource WarningButtonStyle}" />
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            x:Name="Save"
                            Content="Ghi"
                            Style="{StaticResource SuccessButtonStyle}" />
                        <Button
                            x:Name="Cancel"
                            Margin="0"
                            Content="Thoát"
                            Style="{StaticResource SecondaryButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <TextBlock
            x:Name="ErrorMessage"
            Grid.Row="3"
            Style="{StaticResource ErrorMessageStyle}" />
    </Grid>
</UserControl>
