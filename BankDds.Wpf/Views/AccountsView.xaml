<UserControl
    x:Class="BankDds.Wpf.Views.AccountsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:BankDds.Wpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="700"
    d:DesignWidth="1200"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter" />
        <converters:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVis" />
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            Style="{StaticResource PageTitleStyle}"
            Text="Quản lý Tài khoản" />

        <!--  Error Message  -->
        <TextBlock
            x:Name="ErrorMessage"
            Grid.Row="1"
            Style="{StaticResource ErrorMessageStyle}" />

        <!--  Customer List (Master)  -->
        <GroupBox
            Grid.Row="2"
            Margin="0,0,0,10"
            Header="Khách hàng - Chọn khách hàng để xem tài khoản">
            <DataGrid
                x:Name="Customers"
                SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                Style="{StaticResource StandardDataGridStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="120"
                        Binding="{Binding CMND}"
                        Header="CMND" />
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding Ho}"
                        Header="Họ" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Ten}"
                        Header="Tên" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding DiaChi}"
                        Header="Địa chỉ" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding SDT}"
                        Header="SĐT" />
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding MaCN}"
                        Header="Chi nhánh" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!--  Section Title  -->
        <TextBlock
            Grid.Row="3"
            Style="{StaticResource SectionTitleStyle}"
            Text="Tài khoản của khách hàng đã chọn" />

        <!--  Action Buttons  -->
        <StackPanel
            Grid.Row="4"
            Margin="0,0,0,15"
            Orientation="Horizontal">
            <Button
                x:Name="Add"
                Content="Thêm tài khoản"
                Style="{StaticResource PrimaryButtonStyle}" />
            <Button
                x:Name="Edit"
                Content="Sửa"
                Style="{StaticResource WarningButtonStyle}" />
            <Button
                x:Name="Delete"
                Content="Xóa"
                Style="{StaticResource DangerButtonStyle}" />
            <Button
                x:Name="Close"
                Content="Đóng tài khoản"
                Style="{StaticResource WarningButtonStyle}" />
            <Button
                x:Name="Reopen"
                Content="Mở lại tài khoản"
                Style="{StaticResource SuccessButtonStyle}" />
        </StackPanel>

        <!--  Accounts for Selected Customer (Detail)  -->
        <DataGrid
            x:Name="Accounts"
            Grid.Row="5"
            SelectedItem="{Binding SelectedAccount, Mode=TwoWay}"
            Style="{StaticResource StandardDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding SOTK}"
                    Header="Số tài khoản" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding SODU, StringFormat=N0}"
                    Header="Số dư (VND)" />
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding MACN}"
                    Header="Chi nhánh" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding NGAYMOTK, StringFormat=dd/MM/yyyy}"
                    Header="Ngày mở" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding StatusDisplay}"
                    Header="Trạng thái" />
            </DataGrid.Columns>
        </DataGrid>

        <!--  Edit Form  -->
        <Border
            Grid.Row="5"
            Style="{StaticResource DetailPanelStyle}"
            Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisConverter}}">
            <ScrollViewer Padding="20" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Style="{StaticResource SectionTitleStyle}" Text="Thông tin Tài khoản" />

                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Số tài khoản:" />
                    <TextBox
                        Margin="0,0,0,12"
                        Background="#F0F0F0"
                        IsReadOnly="True"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingAccount.SOTK}" />

                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Số dư:" />
                    <TextBox
                        Margin="0,0,0,12"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingAccount.SODU, UpdateSourceTrigger=PropertyChanged}" />

                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Ngày mở:" />
                    <DatePicker
                        MinHeight="32"
                        Margin="0,0,0,12"
                        Padding="10"
                        FontSize="14"
                        SelectedDate="{Binding EditingAccount.NGAYMOTK}" />

                    <TextBlock Style="{StaticResource StandardLabelStyle}" Text="Chi nhánh:" />
                    <TextBox
                        Margin="0,0,0,20"
                        Background="#F0F0F0"
                        IsReadOnly="True"
                        Style="{StaticResource StandardTextBoxStyle}"
                        Text="{Binding EditingAccount.MACN}" />

                    <!--  Inline validation errors  -->
                    <Border
                        Style="{StaticResource ValidationErrorPanelStyle}"
                        Visibility="{Binding HasError, Converter={StaticResource BoolToVisConverter}}">
                        <StackPanel>
                            <TextBlock
                                FontWeight="SemiBold"
                                Foreground="#8B0000"
                                Text="Vui lòng sửa các lỗi sau:"
                                Margin="0,0,0,4" />
                            <TextBlock
                                Text="{Binding ErrorMessage}"
                                TextWrapping="Wrap"
                                Foreground="#8B0000" />
                        </StackPanel>
                    </Border>

                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                        <Button
                            x:Name="Save"
                            Content="Ghi"
                            Style="{StaticResource SuccessButtonStyle}" />
                        <Button
                            x:Name="Cancel"
                            Margin="0"
                            Content="Thoát"
                            Style="{StaticResource SecondaryButtonStyle}" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!--  Loading Overlay  -->
        <Grid
            Grid.Row="0"
            Grid.RowSpan="7"
            Style="{StaticResource LoadingOverlayStyle}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource LoadingSpinnerStyle}" />
                <TextBlock
                    Margin="0,10,0,0"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="White"
                    Text="Đang tải..." />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
